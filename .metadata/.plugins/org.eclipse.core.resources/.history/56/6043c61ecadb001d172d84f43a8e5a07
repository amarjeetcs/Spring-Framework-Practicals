package com.spring.boot.project;

import java.util.ArrayList;
import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class StudentController {
	@GetMapping("/student")
	public Student getStudent() {
		return new Student("Amarjeet", "Banglore", "23", "Edifecs");
	}

	@GetMapping("/students")
	public List<Student> getStudents() {
		List<Student> students = new ArrayList<>();
		students.add(new Student("Rajnish", "Banglore", "29", "L&T"));
		students.add(new Student("Hira", "pune", "20", "Mahindra"));
		students.add(new Student("Sanjeet", "Bihar", "23", "AimDek"));
		students.add(new Student("Subhendu", "UP", "23", "Virtusa"));
		students.add(new Student("Ranjeet", "patna", "23", "IAS"));
		return students;
	}

	@GetMapping("/student/query")
	public Student studentQueryParam(@RequestParam(name = "name") String name, @RequestParam(name = "city") String city,
			@RequestParam(name = "age") String age, @RequestParam(name = "company") String company) {
		return new Student(name, city, age, company);
	}

}
